<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="@dimen/layout_padding">

    <RelativeLayout android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rlImage"
        android:paddingVertical="10dp">

        <ImageButton android:id="@+id/btnAdd"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:src="@drawable/outline_save_24"
            app:tint="@color/white"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/purple_500"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="20dp"/>

        <ImageButton android:id="@+id/btnEdit"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:src="@drawable/round_edit_24"
            app:tint="@color/white"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/purple_500"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="20dp"/>


        <ImageButton android:id="@+id/btnCancel"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_clear_24"
            app:tint="@color/black"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/grey_500"
            android:layout_alignParentStart="true"
            android:layout_marginHorizontal="20dp"/>

    </RelativeLayout>

    <RelativeLayout android:id="@+id/rlImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttons">

        <androidx.cardview.widget.CardView
            android:id="@+id/imgCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="75dp">

            <ImageView android:id="@+id/imgProduct"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:background="@color/grey_900"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/white">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/outline_add_photo_alternate_24"
                android:padding="10dp"/>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>



    <Spinner android:id="@+id/spnCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rlImage"
        app:layout_constraintBottom_toTopOf="@id/tilProduct"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/spnCategories"
        app:layout_constraintEnd_toEndOf="@id/spnCategories"
        app:layout_constraintTop_toBottomOf="@id/spnCategories"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name"
            android:textSize="@dimen/body"
            android:lines="1"
            android:inputType="text"/>

    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilProductPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tilProduct"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etProductPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/price"
            android:textSize="@dimen/body"
            android:lines="1"
            android:inputType="number|numberDecimal"/>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilProductDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tilProductPrice"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etProductDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/description"
            android:textSize="@dimen/body"/>

    </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>